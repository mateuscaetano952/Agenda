<%- include('includes/head') %>
<%- include('includes/navbar') %>

   <div class="container">
        <div class="row">

            <div class="col-lg-2"></div>


            <div class="col-lg-8 my-3">


              <%- include('includes/messages') %>
              <% if(user) { %>
                <h1>Ola, <%=user.email %></h1>
                <% } %>

                <h1 class="display-1 text-center pt-5">Agenda</h1>
                <p class="text-center lead">Seus contados abaixos</p>
    
                <% if(contatos.length > 0){ %>
                    <div class="responsive-table">
                        <table class="table">
                            <tr>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Email</th>
                                <th>Numero</th>
                            </tr>

                            <% contatos.forEach((contato) => { %>
                                <tr>
                                    <td> <%= contato.nome %>  </td>
                                    <td> <%= contato.sobrenome %>  </td>
                                    <td> <%= contato.email %>  </td>
                                    <td> <%= contato.numero %>  </td>
                                    <td> <a class="btn btn-success" href="/contato/index/<%= contato._id %>">Editar</a></td>
                                    <td> <a class="btn btn-danger" href="/contato/deletaContato/<%= contato._id %>">Apagar</a></td>
                                </tr>
                            <% }) %>
                        </table>
                    </div>
                <% } %>
            </div>

            <div class="col-lg-2"></div>

        </div>
   </div>

<%- include('includes/footer') %>